<div class="container">
  <h2>Edit - Happy Playgrounds Vendors</h2>

  <br>

  <%#= link_to 'Home', root_path %>

<%= simple_form_for @happyvendor,
  wrapper: :vertical_form,
  wrapper_mappings: {
    boolean:       :vertical_boolean,
    check_boxes:   :vertical_collection,
    date:          :vertical_multi_select,
    datetime:      :vertical_multi_select,
    file:          :vertical_file,
    radio_buttons: :vertical_collection,
    range:         :vertical_range,
    time:          :vertical_multi_select
  } do |f| %>

  <%= f.error_notification %>

  <%= f.input :vendor_name, label: "Vendor Name"%>

  <div class="form-group row">
    <div class="col-3">
        <%= f.input :first_name, label: "First Name", input_html: { maxlength: 20, size:30 } %>
    </div>

    <div class="col-3">
        <%= f.input :middle_name, label: "Middle Name" %>
    </div>

    <div class="col-4">
        <%= f.input :last_name, label: "Last Name" %>
    </div>

    <div class="col-2">
      <%= f.input :suffix, label: "Suffix" %>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-4">
      <%= f.input :title, label: "Title" %>
    </div>

    <div class="col-4">
      <%= f.input :email, label: "Email" %>
    </div>

    <div class="col-4">
       <%= f.input :website, label: "Website" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-4">
      <%= f.input :home_phone, label: "Home Phone" %>
    </div>

    <div class="col-4">
      <%= f.input :business_phone, label: "Business Phone" %>
    </div>

    <div class="col-4">
       <%= f.input :fax, label: "Fax" %>
    </div>

  </div>


  <div class="form-group row">
    <div class="col-12">
      <%= f.input :mailing_street1, label: "Address Line 1"%>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-12">
      <%= f.input :mailing_street2, label: "Address Line 2"%>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-4">
      <%= f.input :mailing_city, label: "City"%>
    </div>
    <div class="col-4">
      <%= f.input :mailing_state, label: "State"%>
    </div>
    <div class="col-4">
      <%= f.input :mailing_postal_code, label: "Zip"%>
    </div>
  </div>


  <div class="form-group row">
    <div class="col-2">
      <%= f.input :terms, label: "Terms" %>
    </div>
    <div class="col-2">
      <%= f.input :vendor_tax_id, label: "Tax Id" %>
    </div>
    <div class="col-1 align-self-end">
      <%= f.input :taxable %>
    </div>
    <div class="col-1 align-self-end">
      <%= f.input :minority %>
    </div>
    <div class="col-2 align-self-end">
      <%= f.input :vendor1099 %>
    </div>
    <div class="col-4">
      <%= f.input :ap_acct_ref, label: "AP Acct Ref" %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%= f.input :bank_name, label: "Bank Name" %>
    </div>
    <div class="col-3">
      <%= f.input :bank_aba, label: "Bank ABA" %>
    </div>
    <div class="col-3">
      <%= f.input :bank_acct_no, label: "Bank Acct" %>
    </div>
    <div class="col-3">
      <%= f.input :balance %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-3">
      <%#= f.input :balance %>
    </div>
  </div>

  <div class="form-group row mb-0">
    <div class="col-sm-9">
      <%= f.button :submit, 'Update Happy Vendor', class: "btn-primary" %>
      <%= link_to "Cancel", :back, class: "btn btn-outline-secondary" %>
    </div>
  </div>
<% end %>
</div>
