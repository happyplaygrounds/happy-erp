<%#= debug @happycustomer %>
<%#= debug @happyquote %>
<%#= debug @lines %>
<div class="container">
  <h2>Happy Quotes for <%= @happycustomer.customer_name%> - Quote #:  <%= @happyquote.number%>-<%= @happyquote.sub%></h2>
  <h6> This page is for you to drag and drop the below line items into the order you prefer for the customer's quote</h6>
  <br>
        <div class="row">
          <div class="col-sm-2">
            <h3>Part #</h3>
          </div>
          <div class="col-sm-1">
            <h3>Qty</h3>
          </div>
          <div class="col-sm-5">
            <h3>Description</h3>
          </div>
          <div class="col-sm-2">
            <h3>Unit Price</h3>
          </div>
          <div class="col-sm-2">
            <h3>Total</h3>
          </div>
        </div>
<%#= link_to 'New Quote', new_happy_quote_path(happy_customer_id: params[:customer_id]) %>
  <div data-controller="drag" data-drag-url="/happy_quotes/:id/move">
      <% @lines.each do |quote| %>
        <div data-id="<%= quote.id %>" data-quoteid="<%= quote.id %>"  class="card card-body mb-4">
          <div class="row">
          <div class="col-sm-2">
                <%= quote.product_id %>
          </div>
          <div class="col-sm-1">
                <%= quote.quantity %>
          </div>
          <div class="col-sm-5">
                <%= quote.description %>
          </div>
          <div class="col-sm-2">
                <%= quote.unit_price %>
          </div>
          <div class="col-sm-2">
                <%= quote.total_line_amount %>
          </div>
        </div>
        </div>
      <% end %>
  </div>
  <p><%= link_to "Printable Quote (PDF)", edit_happy_quote_path(@happyquote, format: "pdf") %></p>
<%#= link_to 'New Quote', new_happy_quote_path(happy_customer_id: params[:customer_id]) %>
</div>

