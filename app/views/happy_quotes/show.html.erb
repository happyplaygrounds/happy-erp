<div class="container">

  <div class="row">

  <% s = (@happyquote.status.presence || "open").downcase %>
  <% badge_class =
      case s
      when "won"     then "bg-success"
      when "lost"    then "bg-danger"
      when "pending" then "bg-warning text-dark"
      when "sent"    then "bg-primary"
      when "draft"   then "bg-secondary"
      else                "bg-info text-dark"
      end
  %>

  <!-- TOP TOOLBAR -->
  <div class="col-12 my-3">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2">

      <!-- LEFT: Status badge + Updated -->
      <div class="d-flex align-items-center gap-2">
        <span class="fw-semibold">Status:</span>

        <span class="badge rounded-pill <%= badge_class %> px-3 py-2">
          <%= s.upcase %>
        </span>

        <small class="text-muted">
          Updated <%= time_ago_in_words(@happyquote.updated_at.localtime) %> ago
        </small>
      </div>

      <!-- RIGHT: Action buttons -->
      <div class="d-flex align-items-center">
        <% unless %w[won lost].include?(s) %>
          <div class="btn-group" role="group" aria-label="Quote status actions">

            <% unless s == "pending" %>
            <%= button_to "Mark Pending",
                    set_status_happy_quote_path(@happyquote, status: "pending"),
                    method: :patch,
                    data: { turbo_confirm: "Mark this quote PENDING?" },
                    class: "btn btn-outline-secondary btn-sm rounded-pill px-3" %>
            <% end %>

            <%= button_to "Mark Lost",
                  set_status_happy_quote_path(@happyquote, status: "lost"),
                  method: :patch,
                  data: { turbo_confirm: "Mark this quote LOST?" },
                  class: "btn btn-outline-danger btn-sm rounded-pill px-3" %>

            <%= button_to "Mark Won",
                  set_status_happy_quote_path(@happyquote, status: "won"),
                  method: :patch,
                  data: { turbo_confirm: "Mark this quote WON?" },
                  class: "btn btn-outline-success btn-sm rounded-pill px-3" %>
          </div>
        <% else %>
          <small class="text-muted fst-italic">
            Finalized â€” status locked
          </small>
        <% end %>
      </div>

    </div>
  </div>

    <div class="col-sm-4">
        <p> Happy Playgrounds, LLC<br>7170 S Braden Ave Suite 195<br> Tulsa, OK 74136
        <br>
        <br>Oklahoma: (918) 992-3278
        <br>Arkansas: (479) 364-6145
        <br><%= current_user.email %>
        </p>
    </div>
    <div class="col-sm-4 text-center">
      <%= image_tag "https://d1wfqjcm45bc90.cloudfront.net/happy-erp-logo-v1.png", class: "img-fluid" %>
      <p class="text-danger">Certified Woman Owned Small Business<br>
      Native American Owned<br> 
      TERO & CESO certified
      </p>
    </div>
  <div class="col-2">
    <p><b>Quote # </b><br>
      <b>Quote Date</b><br>
      <b>Order Date</b><br>
      <b>Quote Amount</b><br>
      </p>
  </div>
  <div class="col-2">
    <p>
    <%= @happyquote.number %>-<%= @happyquote.sub.to_s %><br>
    <%= @happyquote.quote_date.strftime("%m-%d-%Y") %><br>
    <% if @happyquote.order_date.nil? %>
        <span>Not Ordered</span><br>
    <% else %>
        <%= @happyquote.order_date.strftime("%m-%d-%Y") %><br>
    <% end %>
    <%= number_to_currency(@quotetotal + @taxAmount - @discountAmount) %>
      </p>
  </div>
  </div>
<div class="row">
  <div class="col-8">
      <p>
      <b>BILL TO:</b><br>
      <%= @happyquote.happy_customer.customer_name %><br>
      Attention: <%= @happyquote.happy_customer.first_name %> <%= @happyquote.happy_customer.last_name %><br>
      <%= @happyquote.happy_customer.mailing_street1 %><br>
      <% if @happyquote.happy_customer.mailing_street2? %>
        <%= @happyquote.happy_customer.mailing_street2 %><br>
      <% end %>
      <%= @happyquote.happy_customer.mailing_city %> <%= @happyquote.happy_customer.mailing_state%> <%= @happyquote.happy_customer.mailing_zipcode %>
      </p>
  </div>
  <div class="col-2">
      <p>
      <b>SHIP TO:</b><br>
      <%= @happyquote.shipping_street1 %><br>
      <% if @happyquote.shipping_street2.present? %>
        <%= @happyquote.shipping_street2 %><br>
      <% else %>
        <%= @happyquote.shipping_city %> <%= @happyquote.shipping_state%> <%= @happyquote.shipping_zipcode %>
      <% end %>
      <% if !@happyquote.shipping_street2.blank? %>
        <%= @happyquote.shipping_city %> <%= @happyquote.shipping_state%> <%= @happyquote.shipping_zipcode %>
      <% end %>
      </p>
  </div>
</div>

