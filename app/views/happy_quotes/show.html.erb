        <div data-id="<%= quote.id %>" data-quoteid="<%= quote.id %>" class="card card-body-4">
          <div class="row" data-toggle="tooltip" title="Use mouse to left click and hold on line item then drag it to the new position on the quote" data-sortable-handle>
         <% if quote.quantity != 0 %>
          <div class="col-sm-2">
                <%= quote.product_id %>
          </div>
          <div class="col-sm-1">
                <%= quote.quantity %>
          </div>
          <div class="col-sm-1">
                <%= quote.unit_of_measure %>
          </div>
          <div class="col-sm-3">
                <%= quote.description %>
          </div>
          <div class="col-sm-1">
                <%= quote.color %>
          </div>
          <div class="col-sm-2">
               <div class="float-right">
                 <%= number_to_currency(quote.unit_price) %>
               </div>
          </div>
          <div class="col-sm-2">
               <div class="float-right">
                <%= number_to_currency(quote.total_line_amount) %>
               </div>
          </div>
        <% else %>
          <div class="col-sm-2">
          </div>
          <div class="col-sm-1">
          </div>
          <div class="col-sm-1">
          </div>
          <div class="col-sm-3">
            <b><%= quote.description %></b>
          </div>
          <div class="col-sm-1">
          </div>
          <div class="col-sm-2">
               <div class="float-right">
               </div>
          </div>
          <div class="col-sm-2">
               <div class="float-right">
               </div>
          </div>
        <% end %>

         </div>
        </div>
      <% end %>
