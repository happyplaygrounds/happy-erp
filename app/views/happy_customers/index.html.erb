<!-- test push3 -->
<div class="container">

  <h2>Happy Customers</h2>
  
  <div class="customer-index-form">
     <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
     <label>
        <%= f.input :cust_name, input_html: {value: " "} %>
     </label>

     <label>
        <%= f.submit "Search", class: "btn btn-primary" %>
     </label>
     <% end %>
  </div>

  <%= page_entries_info @customers %>
  <div class="row bg-secondary" >
      <div class="col-sm-1">          
        <b style="color:white;">ID</b>
      </div>
      <div class="col-sm-3"> 
        <b style="color:white;">Name</b>
      </div>
      <div class="col-sm-3">
        <b style="color:white;">Email</b>
      </div>
  </div>
    
      <% @customers.each do |customer| %>
      <div class="row">
          <div class="col-sm-1">
            <%= customer.id %>
          </div>
          <div class="col-sm-3">
             <%= customer.customer_name %>  
           </div>
          <div class="col-sm-4">
             <%= customer.email %>  
           </div>
          <div class="col-sm-1">
             <%= link_to 'Show', customer %>  
           </div>
          <div class="col-sm-1">
             <%= link_to 'Edit', edit_happy_customer_path(customer) %>  
          </div>
          <div class="col-sm-1">
            <!--  <%#= link_to 'Destroy', customer, method: :delete,
                                        data: { confirm: 'Are you sure?' } %>   -->
             <%= link_to 'Quotes', happy_quotes_path(customer_id: customer.id, customer_name: customer.customer_name) %>  
          </div>
          <div class="col-sm-1">
             <%= link_to 'Installs', happy_install_sites_path(happy_customer_id: customer.id) %>  
           </div>
            <!--  <%#= link_to 'Orders', happy_orders_path %>  
             <%#= link_to 'Vendors', happy_vendors_path %>   -->
      </div>
      <% end %>
   <br> 
  <%= paginate @customers, window: 2 %>
<%= link_to 'New Customer', new_happy_customer_path %>
</div>

