          <div class="card mb-3">
             <div class="card-body">
               <div class="row mb-3">
                  <div class='col text-secondary'>
                    <b>Description: </b><%#= project.description %> <b>Planned start date: </b><%#= project.planned_start_date %>
                  </div>
