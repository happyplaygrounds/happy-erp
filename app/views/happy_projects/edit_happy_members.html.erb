<div class="container">
  <!-- <%#= link_to 'Home', root_path %> -->
  <h2>Happy Team members - <%= @happyProject.project_name %></h2>
  <br>
  <div class="row">
    <div class="col-sm">
      <p>
      <%= @happyProject.description %><br>
      </p>
    </div>
  </div>


  <div class="mb-4">
    <h6>Select from the below members</h6><br>
      <%= form_for(@happyProject) do |f| %>
        <div class="field">
          <%#= hidden_field_tag "ht[happy_project_member_ids][]" %>
          <% User.all.each do |member| %>
            <%#= check_box_tag "ht[happy_project_member_ids][]", member.id, @happyProject.happy_project_member_ids.include?(task.id) %>
            <%#= task.task_name %>
             <%= member.email %>
          <% end %>
          </div>
          <%#= f.hidden_field :user_id, :as => :hidden, :input_html => { :value => @happyStandardProcess.user_id} %>
             <br>
            <%= f.submit class: 'btn btn-primary' %>
        </div>
      <% end %>

<%= link_to 'Back', {:action => 'index'} %>
</div>

